<header><img class="name" src="assets/image/name.jpg" alt="Bobs Burger"></header>

<div class="container">
    <div class="eat">
        <h2>Sanduiche que quero comer!</h2>

        <ul>
            {{#each burgers}} {{#unless devoured}} {{> burgers/burgers-block devoured=true}}
            {{/unless}} {{/each}}
        </ul>
    </div>


    <div class="addBurger">
        <h2 class="addB">Adicione um Sanduiche</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="ca">Nome do Sanduiche:</label>
                <input type="text" id="ca" name="burger_name" />
            </div>

            <div class="form-group">

                <input type="radio" name="devoured" value="1" checked /> Ja comi!<br />
                <input type="radio" name="devoured" value="0" /> Quero comer!
            </div>

            <button class="btn" type="submit">
                <p class="add">Novo</p>
                <img class="icon" src="/assets/image/icon.png" alt="Burger" />
            </button>
        </form>
    </div>


    <div class="devoured">
        <h2>Ja comi!</h2>

        <ul>
            {{#each burgers}} {{#if devoured}} {{> burgers/burgers-block devoured=false}} {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="flag">

    <img id="us" src="/assets/image/en.png" alt="brazilian flag" type="submit">

</div>
