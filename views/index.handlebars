<h1 class="header">WELCOME TO BOB'S BURGER!</h1>

<div class="container">
  <div class="eat">
    <h2>Burgers to eat!</h2>

    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burgers-block eat=true}}
      {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="addBurger">
    <h2>Add a burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name" />
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br />
        <input type="radio" name="devoured" value="1" checked /> Devoured!<br />
        <input type="radio" name="devoured" value="0" /> Eat!
      </div>

      <button class="btn" type="submit">
        <p class="add">ADD NEW</p>
        <img src="/assets/image/icon.png" />
      </button>
    </form>
  </div>

  <div class="devoured">
    <h2>Burgers devoured!</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burgers-block eat=false}} {{/if}}
      {{/each}}
    </ul>
  </div>
</div>